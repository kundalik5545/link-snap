generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          String          @id @default(uuid())
  originalUrl String
  shortCode   String          @unique
  customAlias String?
  title       String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  analytics   LinkAnalytics[]

  @@index([shortCode])
  @@index([createdAt])
}

model LinkAnalytics {
  id         String   @id @default(uuid())
  linkId     String
  clickedAt  DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  deviceType String?
  country    String?
  referrer   String?
  link       Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([clickedAt])
  @@index([deviceType])
}
